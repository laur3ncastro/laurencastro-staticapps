{% extends '_templates/base.njk' %}

{% block content %}
<article class="container">
  <h1>Ships of the Golden Age of pirates</h1>
  <p>Intro text here.</p>
   <div class="row">
    {% for ship in pirates.ships %}
    <div class="col-sm-6 col-lg-4">
      <div class="card mb-4 text-white bg-primary">
        <div class="card-body">
          <h5 class="card-title">{{ ship.ship_name }}</h5>
          <p class="card-text">{{ ship.blurb }}</p>
          <a href="{{ ship.source }}" target="_blank" class="text-white">Source</a>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
  </div>
</div>
</article>
{% endblock %}